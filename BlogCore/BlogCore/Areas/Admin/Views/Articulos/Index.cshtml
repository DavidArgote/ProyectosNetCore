
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="row">

        <div class="col-6">
            <h2 class="text-primary">Lista de Articulos</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary ml-5"><i class="fas fa-plus"></i>Crear articulo</a>
        </div>

        <div class="col-12 mt-5">
            <table id="tblArticulos" class="table table-striped table-bordered mt-4" style="width: 100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Categoria</th>
                        <th>Fecha creacion</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>

</div>

@section Scripts{
    <script src="~/js/articulo.js"></script>
}

